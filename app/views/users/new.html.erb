<div class="columns is-multiline">
  <div class="column is-two-fifths">
    <div class="box">
      <h2 class="title is-3">Create account</h2>
      <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div class="message is-danger">

          <div class="message-header">
            There were some errors:
          </div>
          <div id="error_explanation" class="message">
            <h2></h2>

            <ul class="message-body">
              <% @user.errors.full_messages.each do |message| %>
                <li ><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <%= f.label 'Email:',class: 'subtitle is-5' %>
      <%= f.text_field :email , {class:'input', placeholder:"example@example.com"}%>
      <br>
      <br>
      <%= f.label 'Username:',class: 'subtitle is-5' %>
      <%= f.text_field :username , {class:'input', placeholder:"boarditt_username"}%>
      <br>
      <br>
      <%= f.label 'Password:' ,class: 'subtitle is-5'%>
      <%= f.password_field :password , {class:'input', placeholder:"*******"}%><br>
      <br>
      <%= f.label 'Password confirmation:' ,class: 'subtitle is-5'%>
      <%= f.password_field :password_confirmation , {class:'input', placeholder:"*******"}%><br>
      <br>
      <%= f.submit "Sign up", class:"button is-light"%>
    <% end %>
  </div>
</div>

<div class="column">
  <%= render "terms" %>
</div>

</div>
