<div class="box">
  <h1 class="title is-2">Post by
    <%=@post.user.username%></h1>
      <hr>
  <div class="columns">
    <div class="column is-half">
      <div class="box">
        <h2 class="subtitle is-4"><%=@post.title%></h2>

        <%if @post.content.include? "http://"%>
        <figure class="image">
          <img src="<%=@post.content%>">
        </figure>
        <%else%>
        <hr>
        <p><%=@post.content%></p>
        <%end%>
        <!-- link to comment -->
      </div>
    </div>
  </div>
</div>
