<div class="box">
  <h1 class="title is-2">Post by
    <%=@post.user.username%></h1>
  <hr>
  <div class="columns">
    <div class="column is-half">
      <div class="box">
        <h2 class="subtitle is-4"><%=@post.title%></h2>

        <%if @post.content.include? "http://"%>
          <figure class="image">
            <img src="<%=@post.content%>">
          </figure>
        <%else%>
          <hr>
          <p><%=@post.content%></p>
        <%end%>

      </div>
    </div>

  </div>
  <!-- <hr> -->



  <div class="column is-2">
    <div class="control is-1">
      <div class="tags has-addons">
        <span class="tag is-success">
          <label class="radio">
            <input type="radio" name="question">
            <i class="fas fa-arrow-alt-circle-up" style="font-size:20px"></i>
            <!-- &nbsp;&uarr;&nbsp; -->
          </label>
        </span>
        <span class="tag is-danger">
          <label class="radio">

            <input name="question" class="" type="radio" >
          <i class="is-active fas fa-arrow-alt-circle-down" style="font-size:20px"></i>
          <!-- &nbsp;  &darr;&nbsp; -->

          </label>
        </span>
      </div>
    </div>

    <small>
      <p><%= link_to "Comment  ", new_post_comment_path(@post.id)%>  &nbsp;|&nbsp;  <%= link_to "  Edit", edit_user_post_path(@post.user,@post)%></p>
    </small>
  </div>

  <hr>
  <h1 class="subtitle is-4">Comments</h1>

  <%@post.comments.each do |comment|%>
    <div class="box">
      <p><%= comment.content%></p>
      <small>
        <p class="is-pulled-right">By user
          <%=link_to comment.user.username, user_path(comment.user) %>
          <small>[<%= link_to "Edit", edit_post_comment_path(@post,comment) %>]</small>
        </p>
      </small>
    </div>
  <%end%>

</div>
