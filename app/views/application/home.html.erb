<div class="columns is-multiline">
  <div class="column is-two-fifths ">
    <div class="box">

      <h1 class="title is-2">Welcome to Boarditt!</h1>
      <br>
      <%= form_for @user, url: login_path do |f| %>
      <% if @user.errors.any? %>
        <div class="message is-danger">

          <div class="message-header">
            There were some errors:
          </div>
          <div id="error_explanation" class="message">

            <ul class="message-body">
              <% @user.errors.full_messages.each do |message| %>
                <li ><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div id="flash_messages" class="message is-danger">

        <% flash.each do |key, value| %>
          <div class="message-header">
            There were some errors:
          </div>
          <%= content_tag(:div, value, class: "message-body") %>
        <% end %>
      </div>

      <%= f.label 'Username:',class: 'subtitle is-5' %>
      <%= f.text_field :username , class:'input column'%>
      <br>
      <%= f.label 'Password:' ,class: 'subtitle is-5'%>
      <%= f.password_field :password , class:'input column'%>
      <br>

      <%= f.submit "Login", class:"button is-light"%>
      <br>
    <% end %>
  </div>
</div>

<div class="column">
  <div class="box">

    <div class="box">
      <p class="title is-3">Don't have an account?</p>
      <p></p>
      <p class="subtitle is-4">
        <strong>
          <%=link_to "Sign up", new_user_path%></strong>
      </p>
    </div>
    <hr>
    <div class="box">

      <h1 class="title is-3">Or login with:</h1>
      <p></p>
      <h3 class="subtitle is-3"><%= link_to" Facebook", '/auth/facebook',{class: "facebook"}%>
        &nbsp; | &nbsp;
        <%= link_to " Google", '/auth/google_oauth2',{class: "google"}%>
      </h3>
      <p></p>
    </div>
  </div>
</div>
</div>
